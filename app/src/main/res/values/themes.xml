<resources>
    <!-- Base application theme. -->
    <style name="Theme.WorldwideNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="matchMatch_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="matchWrapPadding_" parent="matchMatch_">
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
    </style>

    <style name="matchWrap_" parent="matchMatch_">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapWrap_" parent="matchWrap_">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="mainTitle_" parent="wrapWrap_">
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="subTitle_" parent="wrapWrap_">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_gravity">fill</item>
    </style>


    <style name="progress_" parent="wrapWrap_">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="topToolbar_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>
</resources>