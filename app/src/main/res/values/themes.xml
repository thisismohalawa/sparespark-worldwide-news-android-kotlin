<resources>
    <!-- Base application theme. -->
    <style name="Theme.WorldwideNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="matchMatch_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="matchMatchPadding_" parent="matchMatch_">
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
    </style>

    <style name="matchWrap_" parent="matchMatch_">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapWrap_" parent="matchWrap_">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="mainTitle_" parent="wrapWrap_">
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitle_" parent="wrapWrap_">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:layout_gravity">fill</item>
    </style>


    <style name="progress_" parent="wrapWrap_">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>